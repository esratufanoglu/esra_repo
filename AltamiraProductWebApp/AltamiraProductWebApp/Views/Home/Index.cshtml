@model IEnumerable<AltamiraShared.Models.Product>

<section class="content-header">
    <h1>
        Products
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Products</li>
    </ol>
</section>
<!-- Search content-->
<section>
    <div class="row">
        <form class="form-horizontal" method="post" action="@Url.Content("~/Home")">
            <div class="box-body">
                <table id="tbl1" class="table table-bordered table-striped">
                    <tr>
                        <td style="font-weight:bold;">Keyword</td>
                        <td><input type="text" class="form-control" name="keyword" placeholder="Search Keyword"></td><td><button type="submit" class="btn btn-info pull-right">Search</button></td>
                    </tr>
                </table>
            </div>
        </form>
    </div>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Manage Products</h3>
                </div>
                <!-- /.box-header -->
                <form class="form-horizontal" method="post" action="@Url.Content("~/Home/Delete")">
                    <div class="box-body">
                        <a href="@Url.Content("~/Home/Create")">Create</a>
                        <table id="tbl1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Brand</th>
                                    <th>Price</th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Brand)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                                        <td><a href="@Url.Content("~/Home/Update/")@item.Id">Update</a> | <a href="@Url.Content("~/Home/Delete/")@item.Id" onclick="return confirm('Are you sure you want to delete?');">Delete</a></td>
                                    </tr>
                                }
                        </table>
                    </div>
                    </form>
                    <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<!-- DataTables -->
<script src="~/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
